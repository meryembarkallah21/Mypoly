{% extends 'admin/parametre/index.html.twig' %}

{% block title %}Edit Code{% endblock %}

{% block contenu %}
    <style>
        #card-header{
            background-color: #0f6674;
            color:white;
        }
    </style>
    <div class="col-xl-12">
        <div class="card mb-4">
            <div class="card-header" id="card-header">
                <i class="fas fa-chart-bar mr-1"></i>
                Editer Un Code Filière
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                <table>
                    <tr>
                        <td width="300px">Logo</td>
                        <td {% if not form.fichierIcon.vars.valid %}errors{% endif %} width="500px">
                            {{ form_widget(form.fichierIcon) }}
                        </td>
                    </tr>
                    <tr>
                        <td width="300px">Nom filière</td>
                        <td {% if not form.name.vars.valid %}errors{% endif %} width="500px">
                            {{ form_widget(form.name) }}
                        </td>
                    </tr>
                    <tr>
                        <td></td>
                        <td><br><button class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button></td>
                    </tr>
                </table>
                {{ form_end(form) }}
            </div>
        </div>
        {% include 'admin/code/affiche.html.twig' %}
    </div>
{% endblock %}
