{% extends 'admin/dashboard/base.html.twig' %}
{% block title %} Inscription {% endblock %}
{% block css %}
{% endblock %}
{% block main %}
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Information de {{inscrire.eleve.nom}} {{inscrire.eleve.prenom}}</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="{{ path('inscrire_index') }}">Inscription</a></li>
                            <li class="breadcrumb-item active">Détail</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>
            <section class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-3">

                            <div class="card card-primary card-outline">
                                <div class="card-body box-profile">
                                    <div class="text-center">
                                        <img class="profile-user-img img-fluid img-circle" src="{{asset('uploads/images/users/' ~ inscrire.eleve.photo)}}" alt="User profile picture">
                                    </div>
                                    <h3 class="profile-username text-center">{{inscrire.eleve.nom}} {{inscrire.eleve.prenom}}</h3>

                                    <p class="text-muted text-center">
                                        N° Matricule : <b>{{ inscrire.eleve.matricule }}</b>
                                    </p>
                                    <p class="text-muted text-center">
                                        Date inscription : <b>{{ inscrire.date|date('d-m-Y') }}</b>
                                    </p>
                                    <p class="text-muted text-center">
                                        Année scolaire: <b>{{ inscrire.year }}</b>
                                    </p>
                                    <a href="#" class="btn btn-default btn-block"><b><i class="fa fa-print"></i> Imprimer</b></a>
                                    <a href="#" class="btn btn-default btn-block"><b><i class="fa fa-print"></i> Certificat de scolarité</b></a>
                                    <a href="#" class="btn btn-default btn-block"><b><i class="fa fa-mobile"></i> Send SMS </b></a>
                                    <a href="#" class="btn btn-default btn-block"><b><i class="fa fa-envelope"></i> Send Email </b></a>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-9">
                                <div class="card card-primary">
                                    <div class="card">
                                        <div class="card-header">
                                            <h5 class="card-title">Information élève</h5>
                                            <div class="card-tools">
                                                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                                    <i class="fas fa-minus"></i>
                                                </button>
                                            </div>
                                        </div>
                                        <div class="card-body" style="display: block;">
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="form-group row">
                                                        <label for="inputName" class="col-sm-4 col-form-label">Classe</label>
                                                        <div class="col-sm-6">
                                                            <input type="text" value="{{ inscrire.classe.code }}" class="form-control" readonly>
                                                        </div>
                                                    </div>
                                                    <div class="form-group row">
                                                        <label for="inputExperience" class="col-sm-4 col-form-label">Date de naissance</label>
                                                        <div class="col-sm-6">
                                                            <input type="text" value="{{ inscrire.eleve.datenais|date('d-m-Y') }}" class="form-control" readonly>
                                                        </div>
                                                    </div>
                                                    <div class="form-group row">
                                                        <label for="inputExperience" class="col-sm-4 col-form-label">Lieu de naissance</label>
                                                        <div class="col-sm-6">
                                                            <input type="text" value="{{ inscrire.eleve.lieunais }}" class="form-control" readonly>
                                                        </div>
                                                    </div>
                                                    <div class="form-group row">
                                                        <label for="inputExperience" class="col-sm-4 col-form-label">Séxe</label>
                                                        <div class="col-sm-6">
                                                            <input type="text" value="{{ inscrire.eleve.sexe }}" class="form-control" readonly>
                                                        </div>
                                                    </div>
                                                    <div class="form-group row">
                                                        <label for="inputExperience" class="col-sm-4 col-form-label">Adresse</label>
                                                        <div class="col-sm-6">
                                                            <input type="text" value="{{ inscrire.eleve.adresse }}" class="form-control" readonly>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="card card-primary">
                                    <div class="card">
                                        <div class="card-header">
                                            <h5 class="card-title">Information Parents</h5>

                                            <div class="card-tools">
                                                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                                    <i class="fas fa-minus"></i>
                                                </button>
                                            </div>
                                        </div>
                                        <div class="card-body" style="display: block;">
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="form-group row">
                                                        <label for="inputName2" class="col-sm-4 col-form-label">Nom Père</label>
                                                        <div class="col-sm-6">
                                                            <input type="text" value="{{ inscrire.eleve.parent.nompere }}" class="form-control" readonly>
                                                        </div>
                                                    </div>
                                                    <div class="form-group row">
                                                        <label for="inputName" class="col-sm-4 col-form-label">Prénom(s)</label>
                                                        <div class="col-sm-6">
                                                            <input type="text"  value="{{ inscrire.eleve.parent.prenompere }}" class="form-control" readonly>
                                                        </div>
                                                    </div>
                                                    <div class="form-group row">
                                                        <label for="inputExperience" class="col-sm-4 col-form-label">Date de naissance Père</label>
                                                        <div class="col-sm-6">
                                                            <input type="text"  class="datepicker form-control" value="{{ inscrire.eleve.parent.datenaispere|date('d-m-Y')  }}" readonly>
                                                        </div>
                                                    </div>
                                                    <div class="form-group row">
                                                        <label for="inputExperience" class="col-sm-4 col-form-label">Fonction Père</label>
                                                        <div class="col-sm-6">
                                                            <input type="text"  class="datepicker form-control" value="{{ inscrire.eleve.parent.fonctionpere }}" readonly>
                                                        </div>
                                                    </div>
                                                    <div class="form-group row">
                                                        <label for="inputExperience" class="col-sm-4 col-form-label">Nom Mère</label>
                                                        <div class="col-sm-6">
                                                            <input type="text"  class="datepicker form-control" value="{{ inscrire.eleve.parent.nommere }}" readonly>
                                                        </div>
                                                    </div>
                                                    <div class="form-group row">
                                                        <label for="inputExperience" class="col-sm-4 col-form-label">Prénom(s) Mère</label>
                                                        <div class="col-sm-6">
                                                            <input type="text"  class="datepicker form-control" value="{{ inscrire.eleve.parent.prenommere }}" readonly>
                                                        </div>
                                                    </div>
                                                    <div class="form-group row">
                                                        <label for="inputExperience" class="col-sm-4 col-form-label">Date de naissance Mère</label>
                                                        <div class="col-sm-6">
                                                            <input type="text"  class="datepicker form-control" value="{{ inscrire.eleve.parent.datenaismere|date('d-m-Y') }}" readonly>
                                                        </div>
                                                    </div>
                                                    <div class="form-group row">
                                                        <label for="inputExperience" class="col-sm-4 col-form-label">Fonction Mère</label>
                                                        <div class="col-sm-6">
                                                            <input type="text"  class="datepicker form-control" value="{{ inscrire.eleve.parent.fonctionmere }}" readonly>
                                                        </div>
                                                    </div>
                                                    <div class="form-group row">
                                                        <label for="inputExperience" class="col-sm-4 col-form-label">E-mail parent</label>
                                                        <div class="col-sm-6">
                                                            <input type="text"  class="datepicker form-control" value="{{ inscrire.eleve.parent.mailparent }}" readonly>
                                                        </div>
                                                    </div>
                                                    <div class="form-group row">
                                                        <label for="inputExperience" class="col-sm-4 col-form-label">Téléphone parent</label>
                                                        <div class="col-sm-6">
                                                            <input type="text"  class="datepicker form-control" value="{{ inscrire.eleve.parent.tel }}" readonly>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    {% endblock %}